@model List<ChuyenDeLoc.Models.NhaCungCap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Báo cáo</h2>

    <a href="/report/Download_PDF/" target="_blank" class="btn btn-primary" style="margin-top:20px;">Download_PDF</a>*@

<div style="margin-left:20px">
    <h2 class="row">Báo Cáo</h2>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3" required>Nhà Cung Cấp</label>
            <div class="col-sm-8">
                <select id="cbPhanLoai" name="phanloai" style="width:100%;height:100%;">
                    @foreach (var item in Model)
                    {
                        <option value="@item.Ma">
                            @item.Ten
                        </option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3" required>Từ</label>
            <div class="col-sm-8">
                <input type="date" class="form-control" name="NgaySinh">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Đến</label>
            <div class="col-sm-8">
                <input type="date" class="form-control" name="NgaySinh">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3"></label>
            <div class="col-sm-8">
                <a href="/report/Download_PDF/" target="_blank" class="btn btn-primary" style="margin-top:20px;">Xuất Báo Cáo</a>
            </div>
        </div>
    </div>
    
</div>