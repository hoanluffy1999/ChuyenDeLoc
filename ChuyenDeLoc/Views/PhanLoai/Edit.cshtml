@model ChuyenDeLoc.Models.PhanLoai

<div class="card">
    <div class="card-body">
        <form class="" action="phanloai/edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" row">
                <div class="form-group col-sm-6 ">
                    <label  class=" col-form-label">Tên</label>
                    <span asp-validation-for="PackageCode" class="text-danger"></span>
                    <input name="Ten" class="form-control" />
                </div>
                <div class="form-group   col-sm-6 ">
                    <label asp-for="SeviceCode" class="  col-form-label"></label>
                    <span asp-validation-for="SeviceCode" class="col-sm-10 text-danger"></span>
                    <input name="Mota" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="form-group  col-sm-6">
                    <label asp-for="Price" class=" col-form-label"></label>

                    <input asp-for="Price" class="form-control" type="number" />

                    <span asp-validation-for="Price" class="  text-danger"></span>
                </div>
                <div class="form-group  col-sm-6">
                    <label asp-for="DayTime" class="col-form-label"></label>

                    <input asp-for="DayTime" class="form-control" type="number" />

                    <span asp-validation-for="DayTime" class="col-sm-4 text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group  col-sm-6">
                    <label asp-for="GroupCode" class=" col-form-label"></label>

                    <input asp-for="GroupCode" class="form-control" type="text" />

                    <span asp-validation-for="GroupCode" class="  text-danger"></span>
                </div>
                <div class="form-group  col-sm-6">
                    <label asp-for="CommandCode" class="col-form-label"></label>

                    <input asp-for="CommandCode" class="form-control" type="text" />

                    <span asp-validation-for="CommandCode" class="col-sm-4 text-danger"></span>
                </div>
            </div>

            <div class="row">
                @if (Model.Ma != 0)
                {
                    <input type="submit" value="Tạo mới" class="offset-5 btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Cập nhật" class="offset-5 btn btn-primary" />
                }
            </div>
        </form>
    </div>

</div>


