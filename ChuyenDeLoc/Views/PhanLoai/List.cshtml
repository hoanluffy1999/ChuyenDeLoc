@using Microsoft.AspNetCore.Http
@model  List<ChuyenDeLoc.Models.PhanLoai>
@{
    ViewData["Title"] = "Quản lý gói Mobistudy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#table_data').DataTable({
            "order": [[2, "desc"]],
            "lengthMenu": [[20, 50, 100, -1], [20, 50, 100, "All"]]
        });
        $('.nav .nav-link').removeClass('active');
        $('#tabSystem').addClass("active");
    });
</script>

<div class="row">
    <div class="card border-bottom-info shadow h-100 py-2 w-100">
        <div class="card-body">
            <form method="post" asp-controller="" asp-action="List">
                <div class="form-row">
                    <div class="form-group col-md-auto">
                        <label asp-for="Status"></label>
                        <select class="form-control" asp-for="Status" asp-items="Model.ListStatus"></select>
                    </div>

                </div>
                <button type="submit" class="btn btn-info mt-2 mt-sm-0"><i class="fas fa-search"></i><span>Tìm</span></button>
            </form>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div asp-validation-summary="ModelOnly" class="alert alert-warning alert-dismissible" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
</div>

<div class="row">
    <div class="card w-100 shadow h-100 py-2">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="table-responsive">
                    <table class="table table-sm table-bordered table-hover" id="table_data">
                        <thead>
                            <tr>
                                <th scope="col">Mã gói </th>
                                <th scope="col">Service Code</th>
                                <th scope="col">Số ngày của gói</th>
                                <th scope="col">Giá của gói</th>
                                <th scope="col">Trạng thái của gói</th>
                                <th scope="col" class="text-center">

                                    <button type="button" class="btn btn-success" id="createPackageConfiguration" onclick="CreatePackageConfigurationForm()"><i class="fas fa-plus-circle"></i>Thêm</button>


                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.Ma</th>
                                        <td>@item.MoTa</td>
                                        <td>@item.Ten</td>

                                        <td>

                                            <button type="button" class="btn mt-2 btn-info" id="editUser" onclick="EditPackageConfigurationForm('@item.Ma')"><i class="fas fa-user-edit"></i></button>
                                            <button type="button" class="btn mt-2 btn-danger" id="deletePackageConfiguration" onclick="DeletePackageConfigurationForm('@item.Ma')"><i class="fas fa-remove"></i></button>

                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="PackageConfigurationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="m-0 font-weight-bold text-primary" id="ModelTitle"></h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="PackageConfigurationModalBody">

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="m-0 font-weight-bold text-primary" id="DeleteModalTitle"></h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="DeleteModalBody">

            </div>
        </div>
    </div>
</div>
<script>
    function CreatePackageConfigurationForm() {
        $.get('@Url.Action("EditPackage", "PackageConfiguration")',
            function (data) {
                $("#PackageConfigurationModalBody").html(data);
            }
        );
        $("#ModelTitle").html('Tạo gói Mobistudy');
        $("#PackageConfigurationModal").modal('show');
    };

     function ImportPackageConfigurationForm() {
        $.get('@Url.Action("ImportPackageConfiguration", "PackageConfiguration")',
            function (data) {
                $("#PackageConfigurationModalBody").html(data);
            }
        );
        $("#ModelTitle").html('Import gói Mobistudy');
        $("#PackageConfigurationModal").modal('show');
    };

    function EditPackageConfigurationForm(id) {
        $.get('@Url.Action("EditPackage", "PackageConfiguration")?id='+id,
            function (data) {
                $("#PackageConfigurationModalBody").html(data);
            }
        );
        $("#ModelTitle").html('Cập nhật gói Mobistudy');
        $("#PackageConfigurationModal").modal('show');
    };

     function DeletePackageConfigurationForm(id) {
        $.get('@Url.Action("DeletePackage", "PackageConfiguration")?id='+id,
            function (data) {
                $("#DeleteModalBody").html(data);
            }
        );
         $("#DeleteModalTitle").html('Xóa gói Mobistudy');
         $("#DeleteModal").modal('show');
    };

    $("#PackageConfigurationModal").on('hidden.bs.modal', function (e) {
            $("#PackageConfigurationModalBody").html('');
    });
</script>


