@model ChuyenDeLoc.Models.PhieuNhap



@{
    ViewBag.Title = "Thông tin phiếu nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="frmUpdate" class="form-horizontal">

    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Thêm sản phẩm nhập </label>    <button id="btnCreate" style="float:right" class="btn btn-success">Thêm mới</button>kk

        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Chọn nhà cung cấp</label>
            <div class="col-sm-8">
                @Model.NhaCungCap.Ten
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3">Nhân viên thực hiện</label>
            <div class="col-sm-8">
                @Model.NhanVien.HoTen
            </div>
        </div>
    </div>

</div>
<div id="dtTable">
</div>
<script>
    var frmFilter = $('#frmFilter');
    var urlDomain = "/PhieuNhap";
    var take = 10;
    var skip = 0;
    $(document).ready(function () {
        getData("", -1);
        searching();
        frmFilter.find('#btnCreate').on('click', function () {
            openCreate();
        });
    });
    function searching() {
        frmFilter.find("#btnSearch").on('click', function () {
            var name = frmFilter.find("#txtName").val();
            var status = frmFilter.find("#drStatus").val()
            getData(name, status);
        });
    }
    function getData(name, status) {

        $.ajax({
            url: urlDomain + "/getlistChiTiet?name=" + $("#txtName").val(),
            method: "GET",
            data: {
                title: frmFilter.find('#txtName').val(),
                take: take,
                skip: skip
            }
            , success: function (response) {
                $('#dtTable').html(response);

            }
        })
    }
    //function filterData(txtSearch) {
    //    var oTable = dtTable.find('#tblDisplay').DataTable();
    //    oTable.fn
    //}
    function openCreate() {
        $.ajax({
            url: urlDomain + "/createChiTiet",
            method: "Get",
            success: function (response) {
                showContentModal(response, "Tạo mới nhà cung cấp")
            }
        });
    }

</script>


